@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

<div ng-app="contactApp">
    <script src="~/Scripts/app/contactApp.js"></script>
    <div ng-controller="contactController">
        <div class="well bs-component" ng-class="messageSent ? 'hidden' : ''">
            <form class="form-horizontal">
                <fieldset>
                    <legend>Leave a message</legend>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" class="form-control input-sm" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" class="form-control input-sm" id="inputName" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <textarea class="form-control input-sm" rows="3" id="textArea" placeholder="Message"></textarea>
                            <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-4">
                            <button type="reset" class="btn btn-default">Clear</button>
                            <button type="submit" class="btn btn-primary" ng-click="submit()">Submit</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
        <div class="alert alert-dismissible alert-success" ng-class="messageSent ? '' : 'hidden'">
            <button type="button" class="close" ng-click="reset()">×</button>
            <strong>Message sent!</strong> You successfully sent <a href="#" class="alert-link">your message to redsite</a>.
        </div>
    </div>
</div>
