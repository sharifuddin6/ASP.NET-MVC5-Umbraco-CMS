@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

<div ng-app="feedbackApp">
    <script src="~/Scripts/app/feedbackApp.js"></script>
    <div ng-controller="feedbackFormController">
        <uib-accordion>
            <uib-accordion-group is-open="status.open">
                <uib-accordion-heading>
                    Leave a Message
                    <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}"></i>
                </uib-accordion-heading>
                <form class="form-horizontal" ng-submit="processForm()">
                    <fieldset>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input ng-model="formData.email" type="text" class="form-control input-sm" id="inputEmail" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input ng-model="formData.name" type="text" class="form-control input-sm" id="inputName" placeholder="Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <textarea ng-model="formData.message" class="form-control input-sm" rows="3" id="textArea" placeholder="Message"></textarea>
                                <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-4 col-lg-offset-4">
                                <button type="reset" class="btn btn-default">Clear</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </uib-accordion-group>
        </uib-accordion>
    </div>

    <div ng-controller="feedbackListController" class="bs-component">
        <div class="list-group">
            <a ng-repeat="x	in messageData" href="#" class="list-group-item">
                <h4 class="list-group-item-heading">{{ x.Name }} [{{ x.Email }}]</h4>
                <p class="list-group-item-text">{{ x.Message }}</p>
                <h6>{{ x.DateTime | date:'HH:mm:ss dd-MM-yyyy' }}</h6>
            </a>
        </div>
        <ul class="pagination">
            <li class="disabled"><a href="#">«</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">»</a></li>
        </ul>
    </div>
</div>
