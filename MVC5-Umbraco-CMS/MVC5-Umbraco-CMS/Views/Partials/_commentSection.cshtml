@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

<div class="well bs-component">
	<form class="form-horizontal">
	<fieldset>
		<legend>Leave a message</legend>
		<div class="form-group">
		    <div class="col-lg-12">
			    <input type="text" class="form-control input-sm" id="inputEmail" placeholder="Email">
		    </div>
		</div>
		<div class="form-group">
		    <div class="col-lg-12">
			    <input type="text" class="form-control input-sm" id="inputName" placeholder="Name">
		    </div>
		</div>
		<div class="form-group">
		    <div class="col-lg-12">
			    <textarea class="form-control input-sm" rows="3" id="textArea" placeholder="Message"></textarea>
			    <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
		    </div>
		</div>
		<div class="form-group">
		    <div class="col-lg-4 col-lg-offset-4">
			    <button type="reset" class="btn btn-default">Clear</button>
			    <button type="submit" class="btn btn-primary">Submit</button>
		    </div>
		</div>
	</fieldset>
	</form>
</div>

<!-- Application -->
<script src="~/Scripts/app/accordion.js"></script>
<div ng-controller="AccordionController">
    <a ng-click="clicked()" class="btn btn-danger">Danger</a>
</div>

<br/>

<div ng-controller="AccordionController">
    <script type="text/ng-template" id="group-template.html">
        <div class="panel {{panelClass || 'panel-default'}}">
            <div class="panel-heading">
                <h4 class="panel-title" style="color:#fa39c3">
                    <a tabindex="0" class="accordion-toggle" ng-click="toggleOpen()" uib-accordion-transclude="heading">
                        <span ng-class="{'text-muted': isDisabled}">{{heading}}</span>
                    </a>
                </h4>
            </div>
            <div class="panel-collapse collapse" uib-collapse="!isOpen">
                <div class="panel-body" style="text-align: right" ng-transclude></div>
            </div>
        </div>
    </script>

    <uib-accordion close-others="oneAtATime">
        <uib-accordion-group is-open="status.open">
            <uib-accordion-heading>
                Leave a Message
                <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}"></i>
            </uib-accordion-heading>
            <form class="form-horizontal">
                <fieldset>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" class="form-control input-sm" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" class="form-control input-sm" id="inputName" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <textarea class="form-control input-sm" rows="3" id="textArea" placeholder="Message"></textarea>
                            <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-4 col-lg-offset-4">
                            <button type="reset" class="btn btn-default">Clear</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </uib-accordion-group>
    </uib-accordion>
</div>
